{
    "name": "cheplv/php-algocash",
    "description": "Algorithmic.Cash PHP Library",
    "license": "GPL-3.0-or-later",
    "require": {
        "php": ">=7.2",
        "ext-curl": "*",
        "ext-bcmath": "*",
        "drlecks/simple-web3-php": "^0.9.0",
        "vlucas/phpdotenv": "^5.4",
        "kornrunner/solidity": "^0.2.0",
        "web3p/web3.php": "dev-master"
    },
    "require-dev": {
        "ext-pcov": "*",
        "phpunit/phpunit": "^8"
    },
    "autoload": {
        "psr-4": {
            "AlgorithmicCash\\": "lib/"
        }
    },
    "scripts": {
        "tests": "./vendor/bin/phpunit --testdox --prepend tests/config.php --whitelist lib --coverage-html coverage tests",
        "dev-server": "php -S localhost:4000 -t server/",
        "dev-tunnel": "ngrok http 4000"
    }
}
